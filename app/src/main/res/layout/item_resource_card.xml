<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView
            android:id="@+id/resource_card_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/resource_item"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            tools:ignore="ContentDescription"/>

    <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/resource_card_image"
            android:orientation="vertical">

        <TextView
                android:id="@+id/resource_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qweb"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"
                android:textStyle="bold"
                android:textSize="18sp" />

        <TextView
                android:id="@+id/resource_card_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/queen_s_web_development_club"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp"/>
    </LinearLayout>



</RelativeLayout>