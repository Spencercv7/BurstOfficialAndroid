<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              style="@style/Section_Title_Text"
              android:text="@string/happening_str"
              android:id="@+id/whats_happening"/>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/card_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_home_event"
            app:layout_constraintTop_toBottomOf="@id/whats_happening"
            tools:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"/>


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/thisWeek_label"
              app:layout_constraintTop_toBottomOf="@id/card_recycler"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginTop="8dp"
              style="@style/Section_Title_Text"
              android:text="@string/this_week_str"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/today_TextView"
              app:layout_constraintTop_toBottomOf="@id/thisWeek_label"
              app:layout_constraintStart_toStartOf="parent"
              style="@style/WhiteButton_RedText"
              android:text="@string/today_str"
              android:layout_marginBottom="12dp"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/vert_card_recycler"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                tools:listitem="@layout/item_home_schedule"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/today_TextView">
        </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>