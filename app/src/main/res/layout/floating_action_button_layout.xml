<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_margin="16dp">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/fab_import"
            android:rotation="90"
            android:visibility="visible"
            app:fabSize="normal"
            style="@style/Custom_Fab"
            app:borderWidth="0dp"
            android:src="@drawable/ic_add_black_24dp"
    />

    <com.google.android.material.card.MaterialCardView
            android:layout_width="160dp"
            android:layout_height="170dp"
            android:id="@+id/revealed_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardBackgroundColor="@color/coral"
            app:cardCornerRadius="16dp"
            android:visibility="invisible"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/button_card_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/newEvent_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    style="@style/fab_button"
                    android:text="@string/event_str"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
            />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/import_cal_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    style="@style/fab_button"
                    android:text="@string/import_str"
                    app:layout_constraintTop_toBottomOf="@id/newEvent_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>