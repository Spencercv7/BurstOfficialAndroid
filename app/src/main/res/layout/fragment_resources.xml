<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_height="match_parent"
                                                   android:layout_width="match_parent"
                                                   android:layout_margin="8dp">
    <androidx.appcompat.widget.AppCompatTextView android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 android:text="@string/alert_str"
                                                 app:layout_constraintTop_toTopOf="parent"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:id="@+id/first_header"
                                                 style="@style/Section_Title_Text"
                                                 android:layout_margin="16dp"

    />
    <androidx.appcompat.widget.AppCompatTextView android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 android:text="@string/burst"
                                                 app:layout_constraintTop_toTopOf="@id/first_header"
                                                 app:layout_constraintBottom_toBottomOf="@id/first_header"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 android:id="@+id/first_caption"
                                                 android:layout_margin="8dp"

    />
    <View
            android:id="@+id/first_line_break"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/first_header"
            android:layout_margin="8dp"/>
    <androidx.appcompat.widget.AppCompatTextView android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 android:text="@string/burst"
                                                 android:layout_margin="8dp"
                                                 app:layout_constraintTop_toBottomOf="@id/first_line_break"
                                                 app:layout_constraintStart_toStartOf="@id/first_line_break"
                                                 android:id="@+id/body__first_1"
                                                 style="@style/SubTitleText"
    />
    <androidx.appcompat.widget.AppCompatTextView android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 android:text="@string/burst"
                                                 android:layout_margin="8dp"
                                                 app:layout_constraintTop_toBottomOf="@id/body__first_1"
                                                 app:layout_constraintStart_toStartOf="@id/first_line_break"
                                                 android:id="@+id/body__first_2"
                                                 style="@style/SubTitleText"
    />
    <androidx.appcompat.widget.AppCompatTextView android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 android:text="@string/burst"
                                                 android:layout_margin="8dp"
                                                 app:layout_constraintTop_toBottomOf="@id/body__first_2"
                                                 app:layout_constraintStart_toStartOf="@id/first_line_break"
                                                 android:id="@+id/body__first_3"
                                                 style="@style/SubTitleText"
    />
    <androidx.appcompat.widget.AppCompatTextView android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 android:text="@string/alert_str"
                                                 app:layout_constraintTop_toBottomOf="@id/body__first_3"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:id="@+id/second_header"
                                                 style="@style/Section_Title_Text"
                                                 android:layout_margin="16dp"

    />
    <androidx.appcompat.widget.AppCompatTextView android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 android:text="@string/burst"
                                                 app:layout_constraintTop_toTopOf="@id/second_header"
                                                 app:layout_constraintBottom_toBottomOf="@id/second_header"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 android:id="@+id/second_caption"
                                                 android:layout_margin="8dp"

    />
    <View
            android:id="@+id/second_line_break"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/second_header"
            android:layout_margin="8dp"/>
    <androidx.appcompat.widget.AppCompatTextView android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 android:text="@string/burst"
                                                 android:layout_margin="8dp"
                                                 app:layout_constraintTop_toBottomOf="@id/second_line_break"
                                                 app:layout_constraintStart_toStartOf="@id/second_line_break"
                                                 android:id="@+id/body_1"
                                                 style="@style/SubTitleText"
    />
    <androidx.appcompat.widget.AppCompatTextView android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 android:text="@string/burst"
                                                 android:layout_margin="8dp"
                                                 app:layout_constraintTop_toBottomOf="@id/body_1"
                                                 app:layout_constraintStart_toStartOf="@id/second_line_break"
                                                 android:id="@+id/body_2"
                                                 style="@style/SubTitleText"
    />
    <androidx.appcompat.widget.AppCompatTextView android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 android:text="@string/burst"
                                                 android:layout_margin="8dp"
                                                 app:layout_constraintTop_toBottomOf="@id/body_2"
                                                 app:layout_constraintStart_toStartOf="@id/second_line_break"
                                                 android:id="@+id/body_3"
                                                 style="@style/SubTitleText"
    />

</androidx.constraintlayout.widget.ConstraintLayout>