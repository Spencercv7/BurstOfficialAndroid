<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:grid="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

        <!-- Title of the fragment page -->
        <TextView
                android:id="@+id/discovery_title_text"
                android:text="@string/discovery"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Section_Title_Text"/>

        <!-- Location of discovery section -->
        <TextView
                android:id="@+id/discovery_location_text"
                android:text="@string/queens_university"
                app:layout_constraintTop_toTopOf="@id/discovery_title_text"
                app:layout_constraintBottom_toBottomOf="@id/discovery_title_text"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="16sp"
                style="@style/Section_Title_Text"/>


        <!-- Search bar for the events -->
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/discovery_search_textfield"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/events_clubs_people"
                app:layout_constraintTop_toBottomOf="@id/discovery_title_text"
                app:boxStrokeColor="#808080">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/discovery_search_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"/>

        </com.google.android.material.textfield.TextInputLayout>


        <!-- RecyclerView horizontally scrollable and filled with explore_horizontal_recycler_card layouts -->
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/explore_fragment_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/discovery_search_textfield"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:scrollbars="none"
                tools:listitem="@layout/explore_horizontal_recycler_card"
                tools:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


        <!-- Card View containing placeholder information from Zeplin -->
        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/explore_main_event1_card"
                android:layout_marginTop="10dp"
                android:elevation="10dp"
                app:layout_constraintTop_toBottomOf="@id/explore_fragment_recycler_view">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/explore_main_event1_placeholder"
                    tools:ignore="ContentDescription"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/explore_event_club_name"
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/queens_civil_eng_club"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="#fff"
                        android:textSize="16sp"/>


                <TextView
                        android:id="@+id/explore_event_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/explore_event_card_info_text"
                        android:text="@string/ellis_hall_324"
                        app:layout_constraintBottom_toBottomOf="@id/explore_event_date"
                        app:layout_constraintEnd_toEndOf="parent"/>


                <TextView
                        android:id="@+id/explore_event_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@id/explore_event_title"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/explore_event_card_info_text"
                        android:text="@string/placeholder_date"/>

                <TextView
                        android:id="@+id/explore_event_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/japanese_architecture_studies"
                        app:layout_constraintBottom_toTopOf="@id/explore_event_desc"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="#fff"
                        android:textSize="30sp"
                        android:fontFamily="@font/roboto_medium"/>


                <TextView
                        android:id="@+id/explore_event_desc"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="@string/placeholder_desc"
                        style="@style/explore_event_card_info_text"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Should have same layout as above card however placeholder image used for now -->
        <com.google.android.material.card.MaterialCardView
                android:id="@+id/explore_main_event2_card"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/explore_main_event1_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/explore_main_event2_placeholder"
                    tools:ignore="ContentDescription"/>
        </com.google.android.material.card.MaterialCardView>


        <!-- Title for first explore section -->
        <TextView
                android:id="@+id/explore_section1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/by_faculty"
                android:textColor="#000"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@id/explore_main_event2_card"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_bold" tools:layout_editor_absoluteX="20dp"/>

        <!-- 2x2 grid for first explore section -->
        <androidx.gridlayout.widget.GridLayout
                android:id="@+id/explore_section1_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/explore_section1_title"
                android:layout_marginTop="10dp"
                grid:alignmentMode="alignBounds"
                grid:columnCount="2"
                grid:rowOrderPreserved="false"
                grid:useDefaultMargins="true">

            <!-- LOTS AND LOTS OF HARDCODED LAYOUTS, four of the same layouts copy and pasted
                 Assuming this may be have to changed to become more dynamic -->
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    grid:layout_columnWeight="1"
                    grid:layout_gravity="fill_horizontal"
                    android:gravity="center"
                    app:strokeColor="@color/light_grey"
                    app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:id="@+id/explore_faculty_image0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/explore_faculty_placeholder"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="contentDescription"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textSize="16sp"
                            android:text="@string/engineering"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toBottomOf="@id/explore_faculty_image0"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    grid:layout_columnWeight="1"
                    grid:layout_gravity="fill_horizontal"
                    android:gravity="center"
                    app:strokeColor="@color/light_grey"
                    app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:id="@+id/explore_faculty_image1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/explore_faculty_placeholder"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="contentDescription"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textSize="16sp"
                            android:text="@string/engineering"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toBottomOf="@id/explore_faculty_image1"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    grid:layout_columnWeight="1"
                    grid:layout_gravity="fill_horizontal"
                    android:gravity="center"
                    app:strokeColor="@color/light_grey"
                    app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:id="@+id/explore_faculty_image2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/explore_faculty_placeholder"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="contentDescription"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textSize="16sp"
                            android:text="@string/engineering"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toBottomOf="@id/explore_faculty_image2"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    grid:layout_columnWeight="1"
                    grid:layout_gravity="fill_horizontal"
                    android:gravity="center"
                    app:strokeColor="@color/light_grey"
                    app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:id="@+id/explore_faculty_image3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/explore_faculty_placeholder"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="contentDescription"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textSize="16sp"
                            android:text="@string/engineering"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toBottomOf="@id/explore_faculty_image3"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

        </androidx.gridlayout.widget.GridLayout>


        <!-- Title for second explore section -->
        <TextView
                android:id="@+id/explore_section2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/by_interests"
                android:textColor="#000"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@id/explore_section1_grid"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_bold" tools:layout_editor_absoluteX="20dp"/>

        <!-- 2x3 grid for first explore section -->
        <androidx.gridlayout.widget.GridLayout
                android:id="@+id/explore_section2_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/explore_section2_title"
                android:layout_marginTop="10dp"
                grid:alignmentMode="alignBounds"
                grid:columnCount="3"
                grid:rowOrderPreserved="false"
                grid:useDefaultMargins="true">


            <!-- LOTS AND LOTS OF HARDCODED LAYOUTS, four of the same layouts copy and pasted
                 Assuming this may be have to changed to become more dynamic -->
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    grid:layout_columnWeight="1"
                    grid:layout_gravity="fill_horizontal"
                    android:gravity="center" >

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/explore_interest_placeholder"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="contentDescription"/>

                    <TextView
                            android:layout_margin="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="@string/politics"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    grid:layout_columnWeight="1"
                    grid:layout_gravity="fill_horizontal"
                    android:gravity="center" >

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/explore_interest_placeholder"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="contentDescription"/>

                    <TextView
                            android:layout_margin="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="@string/politics"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    grid:layout_columnWeight="1"
                    grid:layout_gravity="fill_horizontal"
                    android:gravity="center" >

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/explore_interest_placeholder"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="contentDescription"/>

                    <TextView
                            android:layout_margin="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="@string/politics"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    grid:layout_columnWeight="1"
                    grid:layout_gravity="fill_horizontal"
                    android:gravity="center" >

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/explore_interest_placeholder"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="contentDescription"/>

                    <TextView
                            android:layout_margin="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="@string/politics"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    grid:layout_columnWeight="1"
                    grid:layout_gravity="fill_horizontal"
                    android:gravity="center" >

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/explore_interest_placeholder"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="contentDescription"/>

                    <TextView
                            android:layout_margin="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="@string/politics"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    grid:layout_columnWeight="1"
                    grid:layout_gravity="fill"
                    android:gravity="center"
                    android:backgroundTint="@color/light_grey">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/plus_math"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:ignore="contentDescription"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>




        </androidx.gridlayout.widget.GridLayout>


        <!-- Layout holding all events button, host an event button and background image -->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/explore_host_event_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/explore_section2_grid"
                android:layout_marginTop="20dp">

            <!-- Button for all events -->
            <com.google.android.material.button.MaterialButton
                    android:id="@+id/explore_all_events_button"
                    android:text="@string/all_events_caps"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/OutlineButton_RedText"/>


            <ImageView
                    android:id="@+id/explore_host_event_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/explore_host_placeholder_image"
                    android:adjustViewBounds="true"
                    app:layout_constraintTop_toBottomOf="@id/explore_all_events_button"
                    android:layout_marginTop="20dp"
                    android:scaleType="centerCrop"
                    tools:ignore="contentDescription"/>


            <LinearLayout
                    android:id="@+id/explore_host_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/explore_host_event_background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/explore_host_event_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hosting_an_event"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:layout_marginBottom="10dp"/>

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/explore_list_event_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/list_yours_caps"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:backgroundTint="#6C69AE"/>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>