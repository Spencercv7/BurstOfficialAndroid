
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/coral</item>
        <item name="colorPrimaryDark">@color/dark_grey</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorControlActivated">@color/coral</item>
    </style>
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/activity_launch_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Onboarding Text Styles -->
    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">"@font/poppins"</item>
    </style>

    <style name="SubTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Onboarding button styles -->
    <style name="RedButton_WhiteText">
        <item name="android:focusable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/coral</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteButton_RedText">
        <item name="android:focusable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/coral</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextButton_GreyText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:focusable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextButton_RedText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:focusable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/coral</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextBox_Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <!-- Edit text styles -->
    <style name="EditTextField_Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="boxStrokeColor">@color/dark_grey</item>
    </style>

    <style name="EditText_Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>


    <!-- Style for fragment headers (Discovery..etc) -->
    <style name="Section_Title_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>


    <!-- Styles for explore_card -->
    <style name="explore_event_card_info_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#ffe9ec</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ExploreSection_TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="OutlineButton_RedText" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/coral</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- STYLES FOR SPENCERS WORK -->


    <!-- Home card styles -->
    <style name="HomeCard_Label">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HomeCard_Other">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>


    <!-- Home schedule styles -->
    <style name="ScheduleCard_Label">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="ScheduleCard_Description_Red">
        <item name="android:textColor">@color/coral</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ScheduleCard_Description">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Styles for new event screen -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>


    <!-- New Event Styles -->

    <style name="custom_fab">
        <item name="android:backgroundTint">@color/coral</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="fab_button">
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/coral</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="Drawer_Item_Text">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

</resources>
