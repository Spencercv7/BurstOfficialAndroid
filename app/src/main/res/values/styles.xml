<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/activity_launch_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="RedButton_WhiteText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">#f16262</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="WhiteButton_RedText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#fff</item>
        <item name="android:textColor">#f16262</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="SubTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextButton_GreyText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextButton_RedText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#f16262</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextBox_Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- HOME CARD STYLES... Yeet -->
    <style name="HomeCard_Label">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HomeCard_Other">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- HOME SCHEDULE STYLES -->
    <style name="ScheduleCard_Label">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="ScheduleCard_Description_Red">
        <item name="android:textColor">#f16262</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ScheduleCard_Description">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
